#include <iostream>
using namespace std;
int main() {
   
    int a;
    cout<<"Enter any integer: ";
    cin>>a;
    cout<<"Integer = "<<a<<" and size is "<<sizeof(a)<<" bytes"<<endl;
   
    float b;
    cout<<"Enter any float value: ";
    cin>>b;
    cout<<"float = "<<b<<" and size is "<<sizeof(b)<<" bytes"<<endl;
   
    short c;
    cout<<"Enter any short value: ";
    cin>>c;
    cout<<"short = "<<c<<" and size is "<<sizeof(c)<<" bytes"<<endl;
   
    double d;
    cout<<"Enter any double value: ";
    cin>>d;
    cout<<"double = "<<d<<" and size is "<<sizeof(d)<<" bytes"<<endl;
   
    long double e;
    cout<<"Enter any long double value: ";
    cin>>e;
    cout<<"Long Double = "<<e<<" and size is "<<sizeof(e)<<" bytes"<<endl;

    return 0;
}


RESULT :

Enter any integer: 10
Integer = 10 and size is 4 bytes

Enter any float value: 3.14
float = 3.14 and size is 4 bytes

Enter any short value: 7
short = 7 and size is 2 bytes

Enter any double value: 5.678
double = 5.678 and size is 8 bytes

Enter any long double value: 9.87654321
Long Double = 9.87654 and size is 16 bytes




